<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
    version="2.4" id="VFCSass">

    <display-name>VFC SASS</display-name>
    <description>
		This is mock application to provide VFCObjects
    </description>
    <welcome-file-list>    
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>page</servlet-name>
		<jsp-file>/index.html</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>page</servlet-name>
		<url-pattern>/pages/main.faces</url-pattern>
	</servlet-mapping>
	<filter>
		<filter-name>LoginFilter</filter-name>
		<filter-class>
			de.usu.gatekeeper.servlet.LoginFilter
		</filter-class>

		<init-param>
			<param-name>gatekeeper-properties</param-name>
			<param-value>gatekeeper.default.properties;gatekeeper.properties;/WEB-INF/config/gatekeeper.properties;/WEB-INF/config/gatekeeper.domain.properties;de.usu.ucp.helper.UcpPropertySource;/WEB-INF/config/gatekeeper.local.properties;${gatekeeper.properties}</param-value>
		</init-param>

		<init-param>
			<param-name>configDir</param-name>
			<param-value>/WEB-INF/config</param-value>
		</init-param>

		<init-param>
			<param-name>application</param-name>
			<param-value>vfcmodul-gui</param-value>
		</init-param>

		<init-param>
			<param-name>applicationName</param-name>
			<param-value>VFC SASS</param-value>
		</init-param>

		<init-param>
			<param-name>showApplicationName</param-name>
			<param-value>true</param-value>
		</init-param>
		<init-param>
			<param-name>server</param-name>
			<param-value>${server.url}</param-value>
		</init-param>

		<init-param>
			<param-name>trustedkey</param-name>
			<param-value>${trustedkey}</param-value>
		</init-param>

		<init-param>
			<param-name>domainServices</param-name>
			<param-value>${domainservices.active}</param-value>
		</init-param>

		<init-param>
			<param-name>serviceUrlEncoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>

		<init-param>
			<param-name>publishApplication</param-name>
			<param-value>true</param-value>
		</init-param>

		<init-param>
			<param-name>defaultServiceName</param-name>
			<param-value>/service/http/service/http/vfcmodul-gui</param-value>
		</init-param>

		<init-param>
			<param-name>defaultInternalServiceName</param-name>
			<param-value>/service/http/vfcmodul-gui/intern</param-value>
		</init-param>

	</filter>
	
	<filter>
		<filter-name>csrfFilter</filter-name>
		<filter-class>
			de.usu.gatekeeper.servlet.CSRFTokenFilter
		</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>LoginFilter</filter-name>
		<url-pattern>*</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>csrfFilter</filter-name>
		<url-pattern>*</url-pattern>
	</filter-mapping>

	<session-config>
		<cookie-config>
			<http-only>true</http-only>
			<!--<secure>true</secure> -->
		</cookie-config>
		<tracking-mode>COOKIE</tracking-mode>
	</session-config>
</web-app>
